<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_base"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".ActualizacionPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:text="Actualización de Contraseña"
            android:textColor="#FFFFFF"
            android:textSize="26dp"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|bottom|center_vertical"
            android:src="@drawable/actualizar_pass"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Ingrese su nueva Contraseña"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="40dp"
            android:background="@drawable/edittext_redondeado"
            android:gravity="center"
            android:hint="Ingrese contraseña"
            android:padding="5dp"
            android:inputType="textPassword"
            android:textColorHint="#686868"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ingrese nuevamente su Contraseña"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="40dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_redondeado"
            android:gravity="center"
            android:hint="Ingrese contraseña"
            android:padding="5dp"
            android:textColorHint="#686868"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_redondeado"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"/>
    </LinearLayout>
</LinearLayout>